<?xml version="1.0" encoding="UTF-8"?>     
<odoo>
    <data>

        <record id="view_res_partner_city_tree" model="ir.ui.view">
            <field name="name">res.partner.city.tree</field>
            <field name="model">res.partner.city</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_res_partner_city_form" model="ir.ui.view">
            <field name="name">res.partner.city.form</field>
            <field name="model">res.partner.city</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                        <td>
                                            
                                        </td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        <group>
                           <group>
                               <field name="name" required="1"/>
                               <field name="code"/>
                           </group>
                           <group>
                               <field name="country_id" options="{'no_create': True, 'no_create_edit':True}" required="1"/>
                           </group>
                           <group>
                               
                           </group>
                           <group>
                               <field name="active" widget="boolean_toggle"/>
                           </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_view_partner_city">
            <field name="name">Cities</field>
            <field name="res_model">res.partner.city</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create new record
                </p>
            </field>
        </record>

        <menuitem 
            id="menu_partner_city" 
            name="Cities" 
            parent="partner_ext.menu_partner_dian_address"
            action="action_view_partner_city"
            sequence="85"
            />

    </data>
</odoo> 
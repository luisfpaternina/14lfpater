<?xml version="1.0" encoding="UTF-8"?>     
<odoo>
    <data>

        <record id="view_res_partner_address_tree" model="ir.ui.view">
            <field name="name">res.partner.address.tree</field>
            <field name="model">res.partner.address</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="partner_address_tree">
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_res_partner_address_form" model="ir.ui.view">
            <field name="name">res.partner.address.form</field>
            <field name="model">res.partner.address</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="address_form">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                        <td>
                                            
                                        </td>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        <group>
                           <group>
                               <field name="name" required="1"/>
                               <field name="code" required="1"/>
                           </group>
                           <group>
                               <field name="active" widget="boolean_toggle"/>
                           </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_view_partner_address">
            <field name="name">Address</field>
            <field name="res_model">res.partner.address</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create new record
                </p>
            </field>
        </record>

        <menuitem 
            id="menu_partner_dian_address" 
            name="DIAN Address" 
            parent="contacts.res_partner_menu_config"
            action="action_view_partner_address"
            sequence="70"
            />

        <menuitem 
            id="menu_partner_address" 
            name="Address" 
            parent="partner_ext.menu_partner_dian_address"
            action="action_view_partner_address"
            sequence="71"
            />

    </data>
</odoo> 